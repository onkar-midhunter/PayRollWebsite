@model PayRollWebsite.Models.CreateEmployeeViewModel

@{
    ViewData["Title"] = "Create Employee";
}

<style>
    .form-section {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 24px 24px 12px 24px;
        margin-bottom: 32px;
        background: #f8f9fa;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
    }
    .form-section legend {
        font-size: 1.25rem;
        font-weight: 600;
        color: #343a40;
        width: auto;
        padding: 0 10px;
        border-bottom: none;
        margin-bottom: 18px;
    }
    .form-group label {
        font-weight: 500;
    }
    .btn-primary {
        padding: 8px 32px;
        font-size: 1.1rem;
        border-radius: 6px;
    }
</style>

<h2>Create Employee</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <fieldset class="form-section">
        <legend>Employee Information</legend>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender"></label>
            <select asp-for="Gender" class="form-control">
                <option value="">Select Gender</option>
                <option>Male</option>
                <option>Female</option>
                <option>Other</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" type="file" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DOB"></label>
            <input asp-for="DOB" class="form-control" type="date" />
            <span asp-validation-for="DOB" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateJoined"></label>
            <input asp-for="DateJoined" class="form-control" type="date" />
            <span asp-validation-for="DateJoined" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Designation"></label>
            <input asp-for="Designation" class="form-control" />
            <span asp-validation-for="Designation" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="InsuranceNo"></label>
            <input asp-for="InsuranceNo" class="form-control" />
            <span asp-validation-for="InsuranceNo" class="text-danger"></span>
        </div>
    </fieldset>

    <fieldset class="form-section">
        <legend>Payment Details</legend>
        <div class="form-group">
            <label asp-for="paymentMethod"></label>
            <select asp-for="paymentMethod" class="form-control"
                    asp-items="Html.GetEnumSelectList<Payroll.Models.PaymentMethod>()"></select>
            <span asp-validation-for="paymentMethod" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StudentLoan"></label>
            <select asp-for="StudentLoan" class="form-control"
                    asp-items="Html.GetEnumSelectList<Payroll.Models.StudentLoan>()"></select>
            <span asp-validation-for="StudentLoan" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UnionMember"></label>
            <select asp-for="UnionMember" class="form-control"
                    asp-items="Html.GetEnumSelectList<Payroll.Models.UnionMember>()"></select>
            <span asp-validation-for="UnionMember" class="text-danger"></span>
        </div>
    </fieldset>

    <fieldset class="form-section">
        <legend>Address</legend>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Postcode"></label>
            <input asp-for="Postcode" class="form-control" />
            <span asp-validation-for="Postcode" class="text-danger"></span>
        </div>
    </fieldset>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
